<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:elevation="5dp"
    app:cardBackgroundColor="#64b5f6"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/icon_sticker_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:selectableItemBackground">

        <ImageView
            android:id="@+id/template_sticker_icon_item_stickerItem"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/template_sticker_icon_item_stickerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#881565c0"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/sticker_name"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>