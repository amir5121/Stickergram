<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_clicked_font_main_container"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/include_toolbar" />

    <TextView
        android:id="@+id/activity_clicked_font_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/your_font_was_added_to_the_app"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/activity_clicked_font_ok_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_clicked_font_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:foreground="?selectableItemBackground"
        android:text="@string/ok"
        android:textColor="#fff" />

</RelativeLayout>