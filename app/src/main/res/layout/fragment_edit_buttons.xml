<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/activity_edit_image_style_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/detailed_sticker_fragment_background"
        android:foreground="?android:selectableItemBackground"
        android:visibility="gone"
        android:text="@string/style" />

    <Button
        android:id="@+id/include_buttons_tilt_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/view_vertical"
        android:layout_toRightOf="@id/view_vertical"
        android:background="@color/icon_sticker_list_background"
        android:foreground="?android:selectableItemBackground"
        android:padding="20dp"
        android:text="@string/tilt" />

    <Button
        android:id="@+id/include_buttons_size_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/include_buttons_tilt_button"
        android:layout_toEndOf="@id/view_vertical"
        android:layout_toRightOf="@id/view_vertical"
        android:background="@color/crop__button_bar"
        android:foreground="?android:selectableItemBackground"
        android:padding="20dp"
        android:text="@string/size" />



    <Button
        android:id="@+id/include_buttons_font_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/view_vertical"
        android:layout_toStartOf="@id/view_vertical"
        android:background="@color/icon_sticker_list_background"
        android:foreground="?android:selectableItemBackground"
        android:padding="20dp"
        android:text="@string/fontItem" />


    <Button
        android:id="@+id/include_buttons_text_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/include_buttons_font_button"
        android:layout_toLeftOf="@id/view_vertical"
        android:layout_toStartOf="@id/view_vertical"
        android:background="@color/crop__button_bar"
        android:foreground="?android:selectableItemBackground"
        android:padding="20dp"
        android:text="@string/text" />


</RelativeLayout>