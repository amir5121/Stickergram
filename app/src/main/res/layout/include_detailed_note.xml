<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_detailed_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/include_toolbar"
    android:layout_margin="5dp"
    android:background="#39333333"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/include_detailed_note_info_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/my_circle"
        android:clickable="true"
        android:src="@drawable/ic_info" />

    <TextView
        android:id="@+id/include_detailed_note_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="5dp"
        android:text="@string/important_note"
        android:textColor="#fff"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/include_detailed_note_close"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_close" />
</LinearLayout>

