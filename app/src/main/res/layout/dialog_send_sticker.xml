<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/dialog_send_sticker_note_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_single_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/add_to_pack"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialog_send_sticker_big_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_single_item_title"
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/note_in_order_to_use_any_of_these_sticker_in_telegram"
                android:textColor="@color/dialog_text_color"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/dialog_send_sticker_info_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_send_sticker_big_note"
                android:src="@drawable/ic_info" />

            <TextView
                android:id="@+id/dialog_send_sticker_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_send_sticker_big_note"
                android:layout_toEndOf="@id/dialog_send_sticker_info_icon"
                android:padding="5dp"
                android:text="@string/for_more_info_press_on_how_to_button"
                android:textColor="@color/dialog_text_color"
                android:textSize="15sp" />
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/dialog_send_sticker_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/dialog_send_sticker_note_container"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:scaleType="fitCenter" />

</RelativeLayout>