<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_finish_editing_finish_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/are_you_sure_you_are_finished_editing_this_sticker"
        android:textColor="@color/dialog_text_color"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/dialog_finish_editing_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dialog_finish_editing_finish_text"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:scaleType="fitCenter" />
</RelativeLayout>