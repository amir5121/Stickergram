<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/include_buttons_text_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:foreground="?android:selectableItemBackground"
            android:padding="@dimen/edit_activity_button_padding"
            android:text="@string/text" />


        <Button
            android:id="@+id/include_buttons_size_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:foreground="?android:selectableItemBackground"
            android:padding="@dimen/edit_activity_button_padding"
            android:text="@string/size" />

        <Button
            android:id="@+id/include_buttons_tilt_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            android:foreground="?android:selectableItemBackground"
            android:padding="@dimen/edit_activity_button_padding"
            android:text="@string/tilt" />

        <Button
            android:id="@+id/include_buttons_font_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:foreground="?android:selectableItemBackground"
            android:padding="@dimen/edit_activity_button_padding"
            android:text="@string/fontItem" />

        <Button
            android:id="@+id/include_buttons_text_color"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:foreground="?android:selectableItemBackground"
            android:padding="@dimen/edit_activity_button_padding"
            android:text="@string/text_color" />


        <Button
            android:id="@+id/include_buttons_shadow_color"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            android:foreground="?android:selectableItemBackground"
            android:padding="@dimen/edit_activity_button_padding"
            android:text="@string/shadow_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/shadow"
                android:textColor="#555" />

            <Button
                android:id="@+id/include_buttons_shadow_radius"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="?android:selectableItemBackground"
                android:padding="@dimen/edit_activity_button_padding"
                android:text="@string/shadow_radius" />

            <Button
                android:id="@+id/include_buttons_shadow_dx"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="?android:selectableItemBackground"
                android:padding="@dimen/edit_activity_button_padding"
                android:text="@string/shadow_dx" />

            <Button
                android:id="@+id/include_buttons_shadow_dy"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="?android:selectableItemBackground"
                android:padding="@dimen/edit_activity_button_padding"
                android:text="@string/shadow_dy" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
